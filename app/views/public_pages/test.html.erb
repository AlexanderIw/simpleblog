<%provide(:title, 'Geolocation test')%>

<div id= "map pull-center" align="center">
	<h3>Testing Maps</h3>
	<h4><a href="#" id="get_location">Get location</a></h4>
	<iframe id= "google_map" width="425" height= "350" frameborder="0" marginwidth="0" scrolling="no" src="https://maps.google.com?output=embed"></iframe>
</div>

<script type="text/javascript">
	var c= function(position){
		var lat= position.coords.latitude,
			lon= position.coords.longitude;
		var coords = lat+ ', '+ lon;
		document.getElementById('google_map').setAttribute('src',"https://maps.google.com?q="+coords+"&z=60&output=embed" )

	}
	document.getElementById('get_location').onclick=function(){
		navigator.geolocation.getCurrentPosition(c);

		return false;
	}
</script>