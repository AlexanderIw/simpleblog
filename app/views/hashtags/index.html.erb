<h2>Welcome to Hashtags</h2>
<p id="notice"><%= notice %> </p>
<%= content_tag('p', link_to('Â«back', controller:'admin', action: 'menu') )%> <!--&laquo;-->
<table class="table table-striped table-bordered table-responsive">
  <thead>
    <tr>
      <th>#</th>
      <th>Created</th>
      <th>Title</th>
      <th>Categories</th>
      <th>Description</th>
      <th>Detail</th>
      <th>Edit</th>
    </tr>
  </thead>
  <tbody>
    <% @tags.each do |tag| %>
      <tr class="">
        <th scope="row"><%= @count+=1 %></th>
        <td><%=tag.created_at.strftime('%m/%d/%y %I:%m %p')%></td>
        <td><%=h(tag.name) %></td>
        <td><%=h(tag.relation)%></td>
        <td><%=h(tag.description)%></td>
        <td><%= link_to 'Show', tag %></td>
        <td><%= link_to 'Edit', edit_hashtag_path(tag) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Hashtag', new_hashtag_path %>