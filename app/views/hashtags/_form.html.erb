<%= form_for(@tag) do |f| %>
  <% if @tag.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tag.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
        <% @tag.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<table class="table table-striped table-bordered table-responsive">
  <tr>
    <th>Title</th>
    <td><%= f.text_field(:name, size:45) %></td>
  </tr>
  <tr>
    <th>Relation to (EX: Science, Programming...)</th>
    <td><%= f.text_field(:subject,size:45) %></td>
  </tr>
  <tr>
    <th>Description</th>
    <td><%= f.text_field(:description) %></td>
  </tr>
  <tr>
    <th>Created At</th>
    <td><%= f.datetime_select(:created_at, order:[:month,:day,:year],start_year: 2010, end_year:Time.now.next_year.year) %></td>
  </tr>
  <div class="actions">
    <%= f.submit %>
  </div>
  </table>
<% end %>
