<h1>Listing Users</h1>
<%= content_tag('p', link_to('Â«back', controller:'admin', action: 'menu').to_a )%> <!--&laquo;-->
<table class="table table-striped table-bordered table-responsive">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Email</th>
      <th>User Level</th>
      <th>Detail</th>
      <th>Edit</th>
      <th colspan="9">Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= @count+=1 %></td>
        <td><%= user.name  %></td>
        <td><%= user.email %></td>
        <td><%= user.user_level%></td>
        <td><%= link_to 'Show', user, class:"btn btn-primary"%></td>
        <td><%= link_to 'Edit', edit_user_path(user), class:"btn btn-sm btn-warning" %></td>
        <td><%= link_to 'Destroy', user, class:'btn btn-sm btn-danger',method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
